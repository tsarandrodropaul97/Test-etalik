{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center">Liste de toutes les réponses</h1>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<table id="example" class="display">
    <thead>
        <tr>
            <th>Numéro d'ordre</th>
            <th>Libelle</th>
            <th>Valeur</th>
            <th>Action</th>
        </tr>   
    </thead>
    <tbody>
        {% for attributeValue in attributesValues %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ attributeValue.attributesType ? attributeValue.attributesType.label : 'N/A' }}</td> 
                <td>{{ attributeValue.value|slice(0, 40) }}</td>
                <td>
                <a class="btn btn-secondary" href="{{ path('app_show', {'id': attributeValue.id}) }}">
                    <i class="fas fa-edit" ></i> Voir
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


<script>
$(document).ready(function() {
    $('#example').DataTable();
});
</script>

{% endblock %}
